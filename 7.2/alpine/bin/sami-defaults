#!/usr/bin/env sh

# Default values for environment variables used by several scripts
# of the korowai/sami docker image. You should source it from every
# shell script that refer these variables.

SAMI_UID=${SAMI_UID:-1000}
SAMI_GID=${SAMI_GID:-1000}
SAMI_CONFIG=${SAMI_CONFIG:-/home/sami/sami.conf.php}
SAMI_PROJECT_TITLE=${SAMI_PROJECT_TITLE:-API Documentation}
SAMI_SOURCE_DIR=${SAMI_SOURCE_DIR:-src}
SAMI_BUILD_DIR=${SAMI_BUILD_DIR:-docs/build/html/api}
SAMI_CACHE_DIR=${SAMI_CACHE_DIR:-docs/cache/html/api}
SAMI_SERVER_PORT=${SAMI_SERVER_PORT:-8001}
SAMI_SOURCE_REGEX="${SAMI_SOURCE_REGEX:-\.\(php\|txt\|rst\)$}"
